<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="11dp">

    <LinearLayout
        android:id="@+id/layout_Recyclerview_Main_Id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_recyclerview_item_decoration"
        android:layout_margin="5dp"
        android:padding = "10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_MainRecycler_Id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/image_cornor_main_recycler"
            android:layout_gravity="center"
            android:paddingBottom="1dp"/>
        <TextView
            android:id="@+id/text_mainRecycler_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:text="ThongDuong"
            android:textSize="20sp" />
    </LinearLayout>
</FrameLayout>