<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="10dp"/>
            <gradient
                android:angle="180"
                android:centerColor="#FFEB3B"
                android:startColor="#0F9715"
                android:gradientRadius="19dp"
                android:endColor="#EE00FF"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="#EFF3F4" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>